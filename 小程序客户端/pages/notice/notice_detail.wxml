<view class="container">
  <loading hidden="{{loadingHide}}">
    {{loadingText}}
  </loading>

  <view class="title">新闻公告详情</view>
  <view class="notice_detail_view"> 
      <view class="viewItem">
        <view class="label">公告id：</view>
        <view class="content">
          <view>{{noticeId}}</view>
        </view>
      </view>

       <view class="viewItem">
        <view class="label">标题：</view>
        <view class="content"> 
          <view>{{title}}</view>
        </view>
      </view>

       <view class="viewItem">
        <view class="label">公告内容：</view>
        <view class="content"> 
          <view>{{content}}</view>
        </view>
      </view>

       <view class="viewItem">
        <view class="label">发布时间：</view>
        <view class="content"> 
          <view>{{publishDate}}</view>
        </view>
      </view>

      <view>
        <navigator class="btnReturn" open-type="navigateBack" hover-class="navigator-hover">返回</navigator>
      </view>

  </view>
</view>
