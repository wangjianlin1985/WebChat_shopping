<view class="container">
  <view class="toggleQview" bindtap="toggleQueryViewHide" style="padding:5px;">显示或隐藏查询视图</view>
  <view class="queryView" hidden="{{queryViewHidden}}">
    <view class="queryParams">
    </view>

    <view class="queryButton">
       <button class="font_12 fl_r op-btn mr_10" bindtap="queryProductClass">查询</button>
    </view>
  </view>

  <view class="productClassList">
  <block wx:for-items="{{productClasss}}" wx:key="{{index}}">
    <view class="productClassItem">
        <navigator url="productClass_detail?classId={{item.classId}}" hover-class="navigator-hover">
        <view class="productClassText">
          <view>类别id：{{item.classId}}</view>
          <view>类别名称：{{item.className}}</view>
        </view>
        </navigator>
    </view>
    <view class="opt_view" style="display:none;">
      <button class="font_12 fl_r del-btn mr_10" bindtap="removeProductClass" data-classid="{{item.classId}}">删除</button> 
      <navigator url="productClass_modify?classId={{item.classId}}" hover-class="navigator-hover">
        <button class="font_12 fl_r op-btn mr_10">编辑</button>
      </navigator>
    </view>
  </block>
  </view>

  <view hidden="{{loading_hide}}" class="loading">
    <view class="loadingImg"><image src="/images/loading.gif" mode="aspectFill"></image></view>
    <view class="loadingTxt">..加载中..</view>
  </view>
  <view class="nodata_view" hidden="{{nodata_hide}}">
    <image src="/images/Noline.png" mode="widthFix"></image>
  </view>
</view>

