<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--namespace命名空间，为了对sql语句进行隔离，方便管理，mapper开发dao方式，使用namespace有特殊作用  
mapper代理开发时将namespace指定为mapper接口的全限定名  
 -->
<mapper namespace="com.chengxusheji.mapper.OrderInfoMapper"> 
<!--在mapper.xml文件中配置很多的sql语句，执行每个sql语句时，封装为MappedStatement对象 
mapper.xml以statement为单位管理sql语句  
 -->
	<!-- 添加订单记录 -->
	<insert id="addOrderInfo" parameterType="orderInfo">
		insert into t_orderInfo(orderNo,userObj,totalMoney,payWayObj,payAccount,orderState,receiveName,telephone,address,orderMemo,orderTime) values 
		(#{orderNo},#{userObj.user_name},#{totalMoney},#{payWayObj.payWayId},#{payAccount},#{orderState.stateId},#{receiveName},#{telephone},#{address},#{orderMemo},#{orderTime})
	</insert>

	<!-- 按照查询条件分页查询订单记录 -->
	<select id="queryOrderInfo" resultMap="orderInfoMap" >
		select t_orderInfo.* from t_orderInfo,t_orderState,t_payWay,t_userInfo ${where} and t_orderInfo.userObj = t_userInfo.user_name and t_orderInfo.payWayObj = t_payWay.payWayId and t_orderInfo.orderState = t_orderState.stateId limit #{startIndex},#{pageSize}
	</select>
	<resultMap id="orderInfoMap" type="orderInfo">
        <id property="orderNo" column="orderNo" />
        <association property="userObj" column="userObj" select="com.chengxusheji.mapper.UserInfoMapper.getUserInfo" />
        <association property="payWayObj" column="payWayObj" select="com.chengxusheji.mapper.PayWayMapper.getPayWay" />
        <association property="orderState" column="orderState" select="com.chengxusheji.mapper.OrderStateMapper.getOrderState" />
    </resultMap>

    <!-- 按照查询条件查询所有订单记录 -->
	<select id="queryOrderInfoList" resultMap="orderInfoMap" >
		select t_orderInfo.* from t_orderInfo,t_orderState,t_payWay,t_userInfo ${where} and t_orderInfo.userObj = t_userInfo.user_name and t_orderInfo.payWayObj = t_payWay.payWayId and t_orderInfo.orderState = t_orderState.stateId
	</select>

    <!-- 按照查询条件的订单记录数 -->
	<select id="queryOrderInfoCount" resultType="int">
		select count(*) from t_orderInfo,t_orderState,t_payWay,t_userInfo ${where} and t_orderInfo.userObj = t_userInfo.user_name and t_orderInfo.payWayObj = t_payWay.payWayId and t_orderInfo.orderState = t_orderState.stateId
	</select>

	<!-- 根据主键查询某个订单记录 -->
	<select id="getOrderInfo" parameterType="string" resultMap="orderInfoMap">
		select * from t_orderInfo where t_orderInfo.orderNo = #{orderNo}
	</select>

	<!-- 更新订单记录 -->
	<update id="updateOrderInfo" parameterType="orderInfo">
		update t_orderInfo set userObj=#{userObj.user_name},totalMoney=#{totalMoney},payWayObj=#{payWayObj.payWayId},payAccount=#{payAccount},orderState=#{orderState.stateId},receiveName=#{receiveName},telephone=#{telephone},address=#{address},orderMemo=#{orderMemo},orderTime=#{orderTime} where orderNo = #{orderNo}
	</update>

	<!-- 删除订单记录 -->
	<delete id="deleteOrderInfo" parameterType="string">
		delete from t_orderInfo where orderNo=#{orderNo}
	</delete>

</mapper>
